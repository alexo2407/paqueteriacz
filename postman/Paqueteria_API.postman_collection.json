{
  "info": {
    "name": "Paqueteria API",
    "_postman_id": "paqueteria-api-collection",
    "description": "Collection para probar endpoints de la API: auth/login, pedidos/listar, pedidos/crear.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth - Login",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"tu@usuario.com\",\n  \"password\": \"tu_password\"\n}",
          "options": {
            "raw": {
              "language": "json"
            }
          }
        },
        "url": {
          "raw": "{{base_url}}/api/auth/login",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "api",
            "auth",
            "login"
          ]
        }
      },
      "response": [],
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status is 200 or 201\", function () {\n    pm.expect(pm.response.code).to.be.oneOf([200,201]);\n});",
              "pm.test(\"Response is JSON\", function () {\n    pm.response.to.have.header(\"Content-Type\");\n    pm.expect(pm.response.headers.get(\"Content-Type\")).to.include(\"application/json\");\n});",
              "try {",
              "    var body = pm.response.json();",
              "    pm.test(\"success true\", function () { pm.expect(body.success).to.eql(true); });",
              "    var token = body.data && body.data.token ? body.data.token : (body.token ? body.token : null);",
              "    if (token) {",
              "        pm.environment.set(\"token\", token);",
              "        console.log(\"Saved token to environment\");",
              "    } else {",
              "        pm.test(\"token present\", function () { pm.expect(token, \"token\").to.not.be.null; });",
              "    }",
              "} catch (e) {",
              "    pm.test(\"response parseable\", function () { throw e; });",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Pedidos - Listar",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Accept",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/pedidos/listar",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "api",
            "pedidos",
            "listar"
          ]
        }
      },
      "response": [],
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status 200\", function () { pm.response.to.have.status(200); });",
              "var body = pm.response.json();",
              "pm.test(\"success true\", function () { pm.expect(body.success).to.eql(true); });",
              "pm.test(\"data is array or object\", function () {",
              "    pm.expect(body.data).to.be.oneOf([null]).or.to.satisfy(function(d){ return Array.isArray(d) || typeof d === 'object'; });",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Pedidos - Crear",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"numero_orden\": 90001,\n  \"destinatario\": \"Cliente Prueba\",\n  \"telefono\": \"0999999999\",\n  \"producto\": \"Producto X\",\n  \"cantidad\": 1,\n  \"coordenadas\": \"-0.180653,-78.467838\",\n  \"direccion\": \"Calle Falsa 123\",\n  \"pais\": \"EC\",\n  \"departamento\": \"Pichincha\",\n  \"municipio\": \"Quito\"\n}",
          "options": {
            "raw": {
              "language": "json"
            }
          }
        },
        "url": {
          "raw": "{{base_url}}/api/pedidos/crear",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "api",
            "pedidos",
            "crear"
          ]
        }
      },
      "response": [],
      "event": [
        {
          "listen": "prerequest",
          "script": {
            "exec": [
              "if (!pm.environment.get(\"token\")) {",
              "    pm.test(\"token exists\", function () { pm.expect(pm.environment.get(\"token\")).to.not.be.undefined; });",
              "    throw new Error(\"Missing token - run login first\");",
              "}"
            ],
            "type": "text/javascript"
          }
        },
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status 200\", function () { pm.response.to.have.status(200); });",
              "var body = pm.response.json();",
              "pm.test(\"success key exists\", function () { pm.expect(body).to.have.property('success'); });",
              "pm.test(\"success true or false\", function () { pm.expect(body.success).to.be.a('boolean'); });",
              "if (body.success) {",
              "    pm.test(\"id returned\", function () { pm.expect(body.data || body.id).to.exist; });",
              "} else {",
              "    console.log(\"Create failed:\", body.message);",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ]
    }
  ]
}
