// Configuración del servidor SMTP
define('SMTP_HOST', 'smtp.ejemplo.com');           // Host del servidor SMTP
define('SMTP_PORT', 587);                          // Puerto: 587 (TLS) o 465 (SSL)
define('SMTP_USERNAME', 'tu-email@ejemplo.com');   // Usuario SMTP / Email
define('SMTP_PASSWORD', 'tu-contraseña-aqui');     // Contraseña o App Password
define('SMTP_ENCRYPTION', 'tls');                  // 'tls' o 'ssl'

// Información del remitente
define('SMTP_FROM_EMAIL', 'noreply@ejemplo.com');  // Email "From"
define('SMTP_FROM_NAME', 'Tu Aplicación');         // Nombre "From"

// Configuración adicional
define('SMTP_DEBUG', 0);  // 0=off, 1=client, 2=client+server, 3=verbose (usar 2 para debug)
define('SMTP_CHARSET', 'UTF-8');

